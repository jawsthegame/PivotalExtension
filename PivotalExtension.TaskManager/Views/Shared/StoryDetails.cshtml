@model PivotalExtension.TaskManager.Models.StoryViewModel
           
<div class="@Model.GetStyle()">
   
    <div class="estimate">@Model.GetEstimate()</div>
    <h3>@Model.GetHeader()</h3>
    <p>@Model.Story.Name</p>
    <div class="card-actions">
    @{
       if(Model.AdvanceAction() == "start") {
         <a href="#" class="link-button green" onclick="StartStory('@Model.FormattedId');return false;">Start Story</a>
       }

       if (Model.AdvanceAction() == "finish")
       {
        <a href="#" class="link-button" onclick="FinishStory('@Model.FormattedId');return false;">Finish Story</a>
        @Html.ActionLink("Add task", "Add", "Task", new { projectId = @Model.Story.ProjectId, storyId = @Model.Story.Id }, new { @class = "facebox link-button green", rel = @Model.FormattedId })
       }
    }
    </div>
</div>
    