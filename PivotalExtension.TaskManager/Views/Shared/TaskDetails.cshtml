@model PivotalExtension.TaskManager.Models.TaskViewModel      
@using PivotalExtension.TaskManager
@using PivotalTrackerDotNet.Domain;

<div class="@Model.GetStyle()" id="@Model.DisplayId">
    <h3>Task</h3>
    <p>@Html.Raw(Html.FormatLinksInPlace(Model.GetDescriptionWithoutOwners()))</p>
    <p><strong>@string.Join("/", Model.GetOwners())</strong></p>
    <div class="card-actions">
       <a href="#" class="link-button"onclick="CompleteTask('@Model.DisplayId', @(Model.Complete ? "false" : "true")); return false">@(Model.Complete ? "Reopen" : "Complete")</a>
       <a href="#" class="link-button red" onclick="RemoveTask('@Model.DisplayId'); return false">Remove</a></p>
    </div>
</div>