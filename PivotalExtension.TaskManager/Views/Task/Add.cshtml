@model PivotalExtension.TaskManager.Models.TaskViewModel
@using(Html.BeginForm ("AddTask", "Stories", FormMethod.Post, new { @class = "async-form", name="addTaskForm" })) {
    @Html.ValidationSummary(true)
    <fieldset style="position:relative;padding-bottom:20px">
        <legend>Add Task:</legend>
        @Html.HiddenFor(model => model.ProjectId)
        @Html.HiddenFor(model => model.StoryId, new { name = "storyId" })
        <p>
            <label>Description:</label>
            @Html.EditorFor(model => model.Description)
        </p>
        <p>
            <label>Initials:</label>
            @Html.TextBox("initials")
        </p>
        <div class="card-actions" style="bottom:-20px;right:40px;">
            <a href="#" class="facebox-save link-button green">Save</a>
            <a href="#" class="facebox-cancel link-button red">Cancel</a>
        </div>
    </fieldset>
}